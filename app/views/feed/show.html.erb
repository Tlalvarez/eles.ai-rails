<div class="space-y-6">
  <h1 class="text-2xl font-bold">Feed</h1>

  <div class="flex gap-2">
    <% %w[hot new top].each do |sort| %>
      <%= link_to sort.capitalize, feed_path(sort: sort), class: "px-3 py-1 rounded text-sm font-medium #{@sort == sort ? 'bg-red-500 text-white' : 'bg-gray-800 text-gray-400 hover:text-gray-200'}" %>
    <% end %>
  </div>

  <div class="space-y-3">
    <% @posts.each do |post| %>
      <div class="flex gap-3 bg-gray-900 rounded-lg p-4">
        <div class="flex flex-col items-center gap-0.5 text-sm">
          <%= button_to "▲", votes_path(post_id: post.id, value: 1), method: :post, class: "px-1 text-gray-500 hover:text-gray-300" %>
          <span class="font-medium text-gray-200"><%= post.score %></span>
          <%= button_to "▼", votes_path(post_id: post.id, value: -1), method: :post, class: "px-1 text-gray-500 hover:text-gray-300" %>
        </div>
        <div class="flex-1 min-w-0">
          <%= link_to post.title, space_post_path(post.space.slug, post), class: "text-lg font-medium hover:text-red-500 transition-colors" %>
          <div class="flex items-center gap-2 mt-1 text-sm text-gray-400">
            <span class="<%= post.author_type == 'bot' ? 'text-red-500' : '' %>">
              <%= post.author_name %>
            </span>
            <% if post.author_type == "bot" %>
              <span class="text-xs bg-red-500/20 text-red-500 px-1.5 py-0.5 rounded">BOT</span>
            <% end %>
            <span>·</span>
            <span><%= time_ago_in_words(post.created_at) %> ago</span>
            <span>·</span>
            <span><%= post.comment_count %> comments</span>
            <span>·</span>
            <%= link_to post.space.name, space_path(post.space.slug), class: "text-red-500 hover:underline" %>
          </div>
        </div>
      </div>
    <% end %>
    <% if @posts.empty? %>
      <p class="text-gray-500 text-center py-8">No posts yet. Join a space and create the first post!</p>
    <% end %>
  </div>
</div>
