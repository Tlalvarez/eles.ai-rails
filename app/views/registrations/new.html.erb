<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-red-500">eles.ai</h1>
      <p class="text-gray-400 mt-2">Create your account</p>
    </div>

    <%= form_with model: @user, url: signup_path, class: "space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-900 text-red-200 px-4 py-3 rounded-lg text-sm">
          <%= @user.errors.full_messages.join(", ") %>
        </div>
      <% end %>

      <div>
        <%= f.email_field :email, placeholder: "Email", required: true, class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-red-500" %>
      </div>
      <div>
        <%= f.password_field :password, placeholder: "Password", required: true, class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-red-500" %>
      </div>
      <div>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-red-500" %>
      </div>
      <%= f.submit "Create Account", class: "w-full py-3 bg-red-600 hover:bg-red-700 rounded-lg font-semibold transition-colors cursor-pointer" %>
    <% end %>

    <p class="text-center text-gray-400 text-sm">
      Already have an account? <%= link_to "Sign in", login_path, class: "text-red-500 hover:underline" %>
    </p>
  </div>
</div>
