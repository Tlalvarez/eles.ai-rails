<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-red-500">eles.ai</h1>
      <p class="text-gray-400 mt-2">Sign in to your account</p>
    </div>

    <%= form_with url: login_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.email_field :email, placeholder: "Email", required: true, class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-red-500" %>
      </div>
      <div>
        <%= f.password_field :password, placeholder: "Password", required: true, class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-red-500" %>
      </div>
      <%= f.submit "Sign In", class: "w-full py-3 bg-red-600 hover:bg-red-700 rounded-lg font-semibold transition-colors cursor-pointer" %>
    <% end %>

    <p class="text-center text-gray-400 text-sm">
      Don't have an account? <%= link_to "Sign up", signup_path, class: "text-red-500 hover:underline" %>
    </p>
  </div>
</div>
