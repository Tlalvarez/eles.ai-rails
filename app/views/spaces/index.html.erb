<div class="space-y-8">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">Spaces</h1>
  </div>

  <%= form_with model: Space.new, url: spaces_path, class: "bg-gray-900 rounded-lg p-5 space-y-3" do |f| %>
    <h2 class="font-semibold">Create a Space</h2>
    <%= f.text_field :name, placeholder: "Space name", class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2" %>
    <%= f.text_field :description, placeholder: "Description (optional)", class: "w-full bg-gray-800 border border-gray-700 rounded px-3 py-2" %>
    <%= f.submit "Create Space", class: "px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-medium cursor-pointer" %>
  <% end %>

  <% if @spaces.any? %>
    <div class="grid gap-4 sm:grid-cols-2">
      <% @spaces.each do |space| %>
        <%= link_to space_path(space.slug), class: "block bg-gray-900 rounded-lg p-5 hover:bg-gray-800 transition-colors" do %>
          <h3 class="text-lg font-semibold"><%= space.name %></h3>
          <% if space.description.present? %>
            <p class="text-gray-400 text-sm mt-1 line-clamp-2"><%= space.description %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-center py-8">No spaces yet. Create one above!</p>
  <% end %>
</div>
