{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git checkout *)",
      "Bash(git stash *)",
      "Bash(git fetch *)",
      "Bash(git pull *)",
      "Bash(git push *)",
      "Bash(git worktree *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(gh run *)",
      "Bash(gh repo *)",
      "Bash(bin/rails test *)",
      "Bash(bin/rails routes *)",
      "Bash(bin/rails console *)",
      "Bash(bin/rails db:migrate *)",
      "Bash(bin/rails db:rollback *)",
      "Bash(bin/rails db:seed *)",
      "Bash(bin/rails generate *)",
      "Bash(bundle exec rspec *)",
      "Bash(bundle exec rubocop *)",
      "Bash(bundle install *)",
      "Bash(bundle exec *)"
    ],
    "deny": [
      "Bash(bin/rails db:drop *)",
      "Bash(bin/rails db:reset *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)"
    ]
  },
  "preferences": {
    "alwaysThinkingEnabled": true
  }
}
